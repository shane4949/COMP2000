
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Personal Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter First Name *" />

        <EditText
            android:id="@+id/edit_middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Middle Name (Optional)" />

        <EditText
            android:id="@+id/edit_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Last Name *" />

        <EditText
            android:id="@+id/edit_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Date of Birth *"
            android:focusable="false"
            android:clickable="true" />

        <!-- Contact Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_personal_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Personal Phone Number *"
            android:inputType="phone" />

        <EditText
            android:id="@+id/edit_work_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Work Phone Number (Optional)"
            android:inputType="phone" />

        <EditText
            android:id="@+id/edit_personal_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Personal Email *"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edit_work_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Work Email (Optional)"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/edit_address_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address Line 1 *" />

        <EditText
            android:id="@+id/edit_address_line_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address Line 2 (Optional)" />

        <EditText
            android:id="@+id/edit_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter City *" />

        <EditText
            android:id="@+id/edit_postcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Post Code *" />

        <EditText
            android:id="@+id/edit_county"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter County (Optional)" />

        <EditText
            android:id="@+id/edit_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Country *" />

        <!-- Emergency Contact Details Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Contact Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_emergency_contact_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Emergency Contact First Name *" />

        <EditText
            android:id="@+id/edit_emergency_contact_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Emergency Contact Last Name *" />

        <EditText
            android:id="@+id/edit_emergency_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Emergency Contact Phone *"
            android:inputType="phone" />

        <EditText
            android:id="@+id/edit_emergency_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Emergency Contact Email (Optional)"
            android:inputType="textEmailAddress" />

        <!-- Salary Info Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary Info"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edit_salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Current Salary *"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edit_employment_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Employment Start Date *"
            android:focusable="false"
            android:clickable="true" />



    </LinearLayout>
</ScrollView>

    <!-- Submit Button -->
    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_margin="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
